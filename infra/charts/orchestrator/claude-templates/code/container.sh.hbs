  if cp /workspace/.ssh/id_ed25519 ~/.ssh/id_ed25519 2>/dev/null; then
    echo "âœ“ SSH private key copied to ~/.ssh/id_ed25519"
  else
    echo "âš ï¸  Could not copy SSH key, using mounted location"
