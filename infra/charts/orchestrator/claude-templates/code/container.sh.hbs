    chmod 600 ~/.ssh/id_ed25519
    [ -f ~/.ssh/id_ed25519.pub ] && chmod 644 ~/.ssh/id_ed25519.pub
  fi

  # Configure SSH to use the key
  cat > ~/.ssh/config << EOF
Host github.com
    HostName github.com
    User git
    IdentityFile ${SSH_KEY_PATH:-~/.ssh/id_ed25519}
    IdentitiesOnly yes
    StrictHostKeyChecking no
EOF

