{
  "permissions": {
    "allow": [
      {{#if agent_tools_override}}
      {{#each permissions.allow}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
      {{else}}
      "Bash",
      "Edit(*)",
      "Read(*)",
      "Write(*)",
      "MultiEdit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "WebSearch(*)",
      "WebFetch(*)"
      {{/if}}
    ],
    "deny": [
      {{#if agent_tools_override}}
      {{#each permissions.deny}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
      {{else}}
      "Bash(npm:install*, yarn:install*, cargo:install*, docker:*, kubectl:*, rm:-rf*)"
      {{/if}}
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "NODE_ENV": "production",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_COST_WARNINGS": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true"{{#if telemetry.enabled}},
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_METRICS_ENDPOINT": "{{telemetry.otlpEndpoint}}",
    "OTEL_EXPORTER_OTLP_METRICS_PROTOCOL": "{{telemetry.otlpProtocol}}",
    "OTEL_EXPORTER_OTLP_LOGS_ENDPOINT": "{{telemetry.otlpEndpoint}}",
    "OTEL_EXPORTER_OTLP_LOGS_PROTOCOL": "{{telemetry.otlpProtocol}}"{{else}},
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "OTEL_METRICS_EXPORTER": "none",
    "OTEL_LOGS_EXPORTER": "none"{{/if}}
  },
  "model": "claude-opus-4-20250514",
  "cleanupPeriodDays": 3,
  "includeCoAuthoredBy": true,
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "./.stop-hook-docs-pr.sh"
          }
        ]
      }
    ]
  }
}
