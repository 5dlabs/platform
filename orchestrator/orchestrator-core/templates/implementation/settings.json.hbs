{
  "enableAllProjectMcpServers": true,
  "permissions": {
    "allow": [
      {{#if agent_tools_override}}
      {{#each permissions.allow}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
      {{else}}
      "Bash(*)",
      "Edit(*)",
      "Read(*)",
      "Write(*)",
      "MultiEdit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)"
      {{/if}}
    ],
    "deny": [
      {{#if agent_tools_override}}
      {{#each permissions.deny}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
      {{/if}}
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "NODE_ENV": "production",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_COST_WARNINGS": "0",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "0",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true"{{#if telemetry.enabled}},
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_LOGS_ENDPOINT": "{{telemetry.logs_endpoint}}",
    "OTEL_EXPORTER_OTLP_LOGS_PROTOCOL": "{{telemetry.logs_protocol}}"{{else}},
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "OTEL_METRICS_EXPORTER": "none",
    "OTEL_LOGS_EXPORTER": "none"{{/if}}{{#if retry.is_retry}},
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "BASH_MAX_TIMEOUT_MS": "300000"{{/if}}
  },
  "model": "{{model}}",
  "cleanupPeriodDays": 7,
  "includeCoAuthoredBy": true
}